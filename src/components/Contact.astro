---
const phone = "(604) 785-4466";
const phoneLink = "tel:6047854466";
const email = "info@rocksteadymechanical.com";
const address = "103-2544 Douglas Rd, Burnaby, BC V5C 5W7";
const mapsApiKey = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY ?? "";
const mapsLink = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`;
---

<section class="contact" id="contact">
  <div class="contact-inner">
    <div class="contact-header" data-animate>
      <span class="section-label">Contact Us</span>
      <h2 class="section-title">Get In Touch</h2>
      <p class="section-description">
        Need a bid or service call for your facility? Reach out and our commercial team will respond quickly.
      </p>
    </div>

    <div class="contact-content">
      <div class="contact-info" data-animate data-animate-delay="1">
        <div class="contact-methods">
          <a href={phoneLink} class="contact-method">
            <div class="method-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            </div>
            <div class="method-content">
              <span class="method-label">Phone</span>
              <span class="method-value">{phone}</span>
            </div>
          </a>

          <a href={`mailto:${email}`} class="contact-method">
            <div class="method-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
            </div>
            <div class="method-content">
              <span class="method-label">Email</span>
              <span class="method-value">{email}</span>
            </div>
          </a>

          <div class="contact-method">
            <div class="method-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <div class="method-content">
              <span class="method-label">Address</span>
              <span class="method-value">{address}</span>
            </div>
          </div>
        </div>

        <div class="contact-hours">
          <h3 class="hours-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            Business Hours
          </h3>
          <div class="hours-list">
            <div class="hours-row">
              <span>Monday - Friday</span>
              <span>8:00 AM - 6:00 PM</span>
            </div>
            <div class="hours-row">
              <span>Saturday</span>
              <span>Closed</span>
            </div>
            <div class="hours-row">
              <span>Sunday</span>
              <span>Closed</span>
            </div>
            <div class="hours-row emergency">
              <span>Emergency Service</span>
              <span class="emergency-badge">24/7</span>
            </div>
          </div>
        </div>
      </div>

      <div class="contact-map" data-animate data-animate-delay="2">
        {mapsApiKey ? (
          <div id="contact-map-canvas" class="map-canvas" aria-label="Map showing Rocksteady Mechanical location"></div>
        ) : (
          <div class="map-placeholder">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            <span class="map-location">Burnaby, BC</span>
            <span class="map-address">103-2544 Douglas Rd</span>
          </div>
        )}
        <div class="map-overlay">
          <a href={mapsLink} target="_blank" rel="noopener noreferrer" class="map-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/><polyline points="15 3 21 3 21 9"/><line x1="10" x2="21" y1="14" y2="3"/></svg>
            Open in Google Maps
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{mapsApiKey && (
  <script is:inline define:vars={{ mapAddress: address, apiKey: mapsApiKey }}>
    const mapContainer = document.getElementById("contact-map-canvas");
    if (mapContainer) {
      window.initMap = () => {
        const geocoder = new google.maps.Geocoder();
        const map = new google.maps.Map(mapContainer, {
          zoom: 15,
          center: { lat: 49.2609, lng: -123.1139 },
          mapTypeControl: false,
          streetViewControl: false,
          fullscreenControl: false,
        });

        geocoder.geocode({ address: mapAddress }, (results, status) => {
          if (status === "OK" && results[0]) {
            map.setCenter(results[0].geometry.location);
            new google.maps.Marker({
              map,
              position: results[0].geometry.location,
            });
          }
        });
      };

      const existing = document.querySelector('script[data-google-maps="contact"]');
      if (!existing) {
        const script = document.createElement("script");
        script.src = `https://maps.googleapis.com/maps/api/js?key=${apiKey}&callback=initMap&v=weekly`;
        script.async = true;
        script.defer = true;
        script.dataset.googleMaps = "contact";
        document.head.appendChild(script);
      }
    }
  </script>
)}

<style>
  .contact {
    background: white;
    border-radius: 20px;
    padding: 48px;
  }

  .contact-inner {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .contact-header {
    text-align: center;
    max-width: 480px;
    margin: 0 auto;
  }

  .section-label {
    display: inline-block;
    font-family: "Switzer", sans-serif;
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--brand-red);
    margin-bottom: 12px;
  }

  .section-title {
    font-family: "Switzer", sans-serif;
    font-size: clamp(1.75rem, 4vw, 2.25rem);
    font-weight: 700;
    color: #0a0a0a;
    margin: 0 0 12px;
    letter-spacing: -0.02em;
  }

  .section-description {
    font-family: "Switzer", sans-serif;
    font-size: 15px;
    color: #525252;
    line-height: 1.6;
    margin: 0;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 32px;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 16px;
    background: #fafafa;
    border-radius: 14px;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  a.contact-method:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .method-icon {
    width: 48px;
    height: 48px;
    background: white;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--brand-red);
    flex-shrink: 0;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
  }

  .method-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .method-label {
    font-family: "Switzer", sans-serif;
    font-size: 12px;
    color: #737373;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .method-value {
    font-family: "Switzer", sans-serif;
    font-size: 15px;
    font-weight: 600;
    color: #0a0a0a;
  }

  .contact-hours {
    padding: 20px;
    background: #fafafa;
    border-radius: 14px;
  }

  .hours-title {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: "Switzer", sans-serif;
    font-size: 15px;
    font-weight: 600;
    color: #0a0a0a;
    margin: 0 0 16px;
  }

  .hours-title svg {
    color: var(--brand-red);
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .hours-row {
    display: flex;
    justify-content: space-between;
    font-family: "Switzer", sans-serif;
    font-size: 14px;
    color: #525252;
  }

  .hours-row.emergency {
    padding-top: 10px;
    margin-top: 6px;
    border-top: 1px solid #e5e5e5;
    color: #0a0a0a;
    font-weight: 500;
  }

  .emergency-badge {
    display: inline-flex;
    align-items: center;
    padding: 4px 10px;
    background: #fef2f2;
    color: var(--brand-red);
    font-size: 12px;
    font-weight: 600;
    border-radius: 6px;
  }

  .contact-map {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    min-height: 340px;
  }

  .map-canvas {
    width: 100%;
    height: 100%;
    min-height: 340px;
    background: #e8e8e8;
  }

  .map-placeholder {
    width: 100%;
    height: 100%;
    min-height: 340px;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    color: #737373;
  }

  .map-placeholder svg {
    color: var(--brand-red);
    opacity: 0.8;
  }

  .map-location {
    font-family: "Switzer", sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: #0a0a0a;
  }

  .map-address {
    font-family: "Switzer", sans-serif;
    font-size: 14px;
    color: #525252;
  }

  .map-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .map-overlay {
    position: absolute;
    bottom: 20px;
    left: 20px;
  }

  .map-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 18px;
    background: white;
    border-radius: 10px;
    font-family: "Switzer", sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #0a0a0a;
    text-decoration: none;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .map-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.16);
  }

  @media (max-width: 900px) {
    .contact {
      padding: 32px 24px;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .contact-map {
      min-height: 200px;
    }

    .map-placeholder {
      min-height: 200px;
    }
  }

  @media (max-width: 600px) {
    .contact {
      padding: 24px 16px;
    }

    .contact-inner {
      gap: 24px;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .contact-method {
      padding: 14px;
    }

    .method-icon {
      width: 40px;
      height: 40px;
    }

    .method-value {
      font-size: 14px;
    }

    .contact-hours {
      padding: 16px;
    }

    .hours-row {
      font-size: 13px;
    }

    .map-placeholder {
      min-height: 160px;
    }

    .map-location {
      font-size: 18px;
    }
  }
</style>
