---
const phone = "(604) 785-4466";
const phoneLink = "tel:6047854466";
const email = "info@rocksteadymechanical.com";
const currentYear = new Date().getFullYear();

const services = ["HVAC", "Plumbing", "Sprinklers", "Refrigeration"];

const quickLinks = [
	{ label: "Home", href: "#home" },
	{ label: "Services", href: "#services" },
	{ label: "About Us", href: "#about" },
	{ label: "Contact", href: "#contact" },
];
---

<footer class="footer">
	<div class="footer-inner">
		<div class="footer-content">
			<div class="footer-brand">
				<a href="#home" class="footer-logo">Rocksteady Mechanical</a>
				<p class="footer-tagline">
					Commercial & Industrial HVAC, Plumbing, Sprinklers &
					Refrigeration Services in British Columbia.
				</p>
				<div class="footer-social">
					<a
						href="https://www.facebook.com/rocksteadymech"
						class="social-link"
						aria-label="Facebook"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path
								d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
							></path>
						</svg>
					</a>
					<a
						href="https://www.instagram.com/rocksteadymech"
						class="social-link"
						aria-label="Instagram"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<rect
								width="20"
								height="20"
								x="2"
								y="2"
								rx="5"
								ry="5"></rect>
							<path
								d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
							></path>
							<line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
						</svg>
					</a>
					<a
						href="https://www.linkedin.com/company/rocksteadymech"
						class="social-link"
						aria-label="LinkedIn"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path
								d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
							></path>
							<rect width="4" height="12" x="2" y="6"></rect>
							<circle cx="4" cy="4" r="2"></circle>
						</svg>
					</a>
					<a
						href="https://x.com/rocksteadymech"
						class="social-link"
						aria-label="X"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path d="M18 6 6 18"></path>
							<path d="m6 6 12 12"></path>
						</svg>
					</a>
				</div>
			</div>

			<div class="footer-links">
				<h3 class="footer-heading">Quick Links</h3>
				<ul class="footer-list">
					{
						quickLinks.map((link) => (
							<li>
								<a href={link.href}>{link.label}</a>
							</li>
						))
					}
				</ul>
			</div>

			<div class="footer-links">
				<h3 class="footer-heading">Services</h3>
				<ul class="footer-list">
					{
						services.map((service) => (
							<li>
								<a href="#services">{service}</a>
							</li>
						))
					}
				</ul>
			</div>

			<div class="footer-contact">
				<h3 class="footer-heading">Contact</h3>
				<div class="contact-info">
					<a href={phoneLink} class="contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><path
								d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
							></path></svg
						>
						{phone}
					</a>
					<a href={`mailto:${email}`} class="contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><rect width="20" height="16" x="2" y="4" rx="2"
							></rect><path
								d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
							></path></svg
						>
						{email}
					</a>
					<span class="contact-item">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							><path
								d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
							></path><circle cx="12" cy="10" r="3"></circle></svg
						>
						103-2544 Douglas Rd, Burnaby, BC V5C 5W7
					</span>
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p class="copyright">
				&copy; {currentYear} Rocksteady Mechanical. All rights reserved.
			</p>
			<div class="footer-legal">
				<a href="#">Privacy Policy</a>
				<a href="#">Terms of Service</a>
			</div>
		</div>
	</div>
</footer>

<style>
	.footer {
		background: #0b0b0b;
		margin-top: 12px;
	}

	.footer-inner {
		max-width: 80rem;
		margin: 0 auto;
		padding: 44px 16px 22px;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
		gap: 40px;
		padding-bottom: 32px;
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	.footer-brand {
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.footer-logo {
		font-family: "Switzer", sans-serif;
		font-size: 18px;
		font-weight: 600;
		color: white;
		text-decoration: none;
	}

	.footer-tagline {
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		color: rgba(255, 255, 255, 0.6);
		line-height: 1.6;
		margin: 0;
		max-width: 320px;
	}

	.footer-social {
		display: flex;
		gap: 12px;
		margin-top: 8px;
	}

	.social-link {
		width: 36px;
		height: 36px;
		background: rgba(255, 255, 255, 0.1);
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: rgba(255, 255, 255, 0.7);
		transition:
			background 0.2s,
			color 0.2s;
	}

	.social-link:hover {
		background: var(--brand-red);
		color: white;
	}

	.footer-heading {
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		font-weight: 600;
		color: white;
		margin: 0 0 16px;
	}

	.footer-list {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 8px;
	}

	.footer-list a {
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		color: rgba(255, 255, 255, 0.6);
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-list a:hover {
		color: white;
	}

	.footer-contact {
		display: flex;
		flex-direction: column;
	}

	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 12px;
	}

	.contact-item {
		display: flex;
		align-items: center;
		gap: 10px;
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		color: rgba(255, 255, 255, 0.6);
		text-decoration: none;
		transition: color 0.2s;
	}

	a.contact-item:hover {
		color: white;
	}

	.contact-item svg {
		flex-shrink: 0;
		color: var(--brand-red);
	}

	.footer-bottom {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding-top: 24px;
	}

	.copyright {
		font-family: "Switzer", sans-serif;
		font-size: 13px;
		color: rgba(255, 255, 255, 0.5);
		margin: 0;
	}

	.footer-legal {
		display: flex;
		gap: 24px;
	}

	.footer-legal a {
		font-family: "Switzer", sans-serif;
		font-size: 13px;
		color: rgba(255, 255, 255, 0.5);
		text-decoration: none;
		transition: color 0.2s;
	}

	.footer-legal a:hover {
		color: white;
	}

	@media (max-width: 900px) {
		.footer-inner {
			padding: 32px 16px 20px;
		}

		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: 32px;
		}

		.footer-brand {
			grid-column: 1 / -1;
		}
	}

	@media (max-width: 700px) {
		.footer-inner {
			padding: 28px 16px 18px;
		}

		.footer-content {
			grid-template-columns: 1fr 1fr;
			gap: 24px;
		}

		.footer-brand,
		.footer-contact {
			grid-column: 1 / -1;
		}

		.footer-links .footer-list {
			columns: 2;
			column-gap: 20px;
		}

		.footer-links .footer-list li {
			break-inside: avoid;
		}

		.footer-bottom {
			flex-direction: column;
			gap: 16px;
			text-align: center;
		}

		.footer-legal {
			gap: 16px;
		}
	}

	@media (max-width: 480px) {
		.footer-content {
			grid-template-columns: 1fr;
			gap: 24px;
		}

		.footer-links .footer-list {
			columns: 1;
		}
	}
</style>
