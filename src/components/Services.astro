---
const phone = "(604) 785-4466";
const phoneLink = "tel:6047854466";

const services = [
	{
		title: "HVAC",
		description:
			"Commercial and industrial HVAC design, installation, and preventative maintenance.",
		image: "/img/rocksteady_hvac.jpg",
		icon: "‚ùÑÔ∏è",
	},
	{
		title: "Plumbing",
		description:
			"Industrial piping, commercial fixtures, backflow, and reliable service response.",
		image: "/img/rocksteady_plumbing.jpg",
		icon: "üîß",
	},
	{
		title: "Sprinklers",
		description:
			"Sprinkler system design, installation, inspections, and compliance support for facilities.",
		image: "/img/rocksteady_fire.jpg",
		icon: "üíß",
	},
	{
		title: "Refrigeration",
		description:
			"Commercial and industrial refrigeration installation, maintenance, and repair services.",
		image: "/img/rocksteady_refrigeration.jpg",
		icon: "üßä",
	},
];
---

<section class="services" id="services">
	<div class="services-inner">
		<div class="services-header" data-animate>
			<span class="section-label">Our Services</span>
			<h2 class="section-title">What We Offer</h2>
			<p class="section-description">
			Commercial and industrial HVAC, plumbing, sprinkler, and refrigeration systems
			delivered with safety and uptime in mind.
			</p>
		</div>

		<div class="services-grid" data-animate-stagger>
			{
				services.map((service) => (
					<div class="service-card">
						<div class="service-image">
							<img
								src={service.image}
								alt={service.title}
								loading="lazy"
							/>
							<div class="service-icon">{service.icon}</div>
						</div>
						<div class="service-content">
							<h3 class="service-title">{service.title}</h3>
							<p class="service-description">
								{service.description}
							</p>
						</div>
					</div>
				))
			}
		</div>

		<div class="services-cta" data-animate>
			<div class="cta-content">
				<h3 class="cta-title">Need Emergency Service?</h3>
				<p class="cta-text">
					Our team is available 24/7 for urgent repairs.
				</p>
			</div>
			<a href={phoneLink} class="cta-button">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="18"
					height="18"
					viewBox="0 0 24 24"
					fill="none"
					stroke="currentColor"
					stroke-width="2"
					stroke-linecap="round"
					stroke-linejoin="round"
					><path
						d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
					></path></svg
				>
				Call {phone}
			</a>
		</div>
	</div>
</section>

<style>
	.services {
		background: white;
		border-radius: 20px;
		padding: 48px;
	}

	.services-inner {
		display: flex;
		flex-direction: column;
		gap: 40px;
	}

	.services-header {
		text-align: center;
		max-width: 480px;
		margin: 0 auto;
	}

	.section-label {
		display: inline-block;
		font-family: "Switzer", sans-serif;
		font-size: 13px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--brand-red);
		margin-bottom: 12px;
	}

	.section-title {
		font-family: "Switzer", sans-serif;
		font-size: clamp(1.75rem, 4vw, 2.25rem);
		font-weight: 700;
		color: #0a0a0a;
		margin: 0 0 12px;
		letter-spacing: -0.02em;
	}

	.section-description {
		font-family: "Switzer", sans-serif;
		font-size: 15px;
		color: #525252;
		line-height: 1.6;
		margin: 0;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 20px;
	}

	.service-card {
		background: #fafafa;
		border-radius: 16px;
		overflow: hidden;
		transition:
			transform 0.2s,
			box-shadow 0.2s;
	}

	.service-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
	}

	.service-image {
		position: relative;
		height: 140px;
		overflow: hidden;
	}

	.service-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s;
	}

	.service-card:hover .service-image img {
		transform: scale(1.05);
	}

	.service-icon {
		position: absolute;
		bottom: 12px;
		left: 12px;
		width: 36px;
		height: 36px;
		background: white;
		border-radius: 10px;
		display: flex;
		align-items: center;
		justify-content: center;
		font-size: 18px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}

	.service-content {
		padding: 20px;
	}

	.service-title {
		font-family: "Switzer", sans-serif;
		font-size: 16px;
		font-weight: 600;
		color: #0a0a0a;
		margin: 0 0 8px;
	}

	.service-description {
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		color: #525252;
		line-height: 1.5;
		margin: 0;
	}

	.services-cta {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 24px;
		padding: 24px 32px;
		background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
		border-radius: 16px;
	}

	.cta-content {
		color: white;
	}

	.cta-title {
		font-family: "Switzer", sans-serif;
		font-size: 18px;
		font-weight: 600;
		margin: 0 0 4px;
	}

	.cta-text {
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		color: #a3a3a3;
		margin: 0;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		gap: 10px;
		padding: 14px 24px;
		background: var(--brand-red);
		color: white;
		font-family: "Switzer", sans-serif;
		font-size: 15px;
		font-weight: 600;
		border-radius: 12px;
		text-decoration: none;
		transition:
			background 0.2s,
			transform 0.2s;
		white-space: nowrap;
	}

	.cta-button:hover {
		background: var(--brand-red-hover);
		transform: translateY(-1px);
	}

	@media (max-width: 900px) {
		.services {
			padding: 32px 24px;
		}

		.services-grid {
			grid-template-columns: repeat(2, 1fr);
		}

		.services-cta {
			flex-direction: column;
			text-align: center;
			padding: 24px;
		}
	}

	@media (max-width: 600px) {
		.services {
			padding: 24px 16px;
		}

		.services-inner {
			gap: 24px;
		}

		.services-grid {
			grid-template-columns: 1fr;
		}

		.service-image {
			height: 160px;
		}

		.section-title {
			font-size: 1.5rem;
		}

		.cta-title {
			font-size: 16px;
		}

		.cta-button {
			padding: 12px 20px;
			font-size: 14px;
		}
	}
</style>
