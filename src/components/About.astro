---
const phone = "(604) 785-4466";
const phoneLink = "tel:6047854466";

const values = [
	{
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/><path d="m9 12 2 2 4-4"/></svg>`,
		title: "Licensed & Insured",
	},
	{
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>`,
		title: "Prompt Service",
	},
	{
		icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>`,
		title: "Satisfaction Guaranteed",
	},
];
---

<section class="about" id="about">
	<div class="about-inner">
		<div class="about-content" data-animate>
			<span class="section-label">About Us</span>
			<h2 class="section-title">Your Trusted Local Experts</h2>
			<p class="about-text">
				With over 15 years of experience serving British Columbia,
				Rocksteady Mechanical delivers commercial and industrial HVAC,
				plumbing, sprinklers and refrigeration services that keep
				facilities safe and efficient.
			</p>
			<p class="about-text">
				We believe in transparent pricing, responsive service, and
				workmanship that stands up to demanding environments. From
				preventative maintenance to system upgrades and emergency
				response, we treat every facility with the same level of care
				and professionalism.
			</p>

			<div class="about-cta">
				<a href="#quote-form" class="btn btn-primary">
					Get a Free Quote
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"
						></path></svg
					>
				</a>
				<a href={phoneLink} class="btn btn-secondary">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						><path
							d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
						></path></svg
					>
					{phone}
				</a>
			</div>
		</div>

		<div class="about-visual" data-animate data-animate-delay="1">
			<div class="about-image">
				<img
					src="/img/rocksteady_technicians.jpg"
					alt="Professional HVAC technician at work"
					loading="lazy"
				/>
			</div>
			<div class="about-values">
				{
					values.map((value) => (
						<div class="value-item">
							<div class="value-icon" set:html={value.icon} />
							<span class="value-title">{value.title}</span>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>

<style>
	.about {
		background: white;
		border-radius: 20px;
		padding: 48px;
	}

	.about-inner {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 60px;
		align-items: start;
	}

	.about-content {
		display: flex;
		flex-direction: column;
	}

	.section-label {
		display: inline-block;
		font-family: "Switzer", sans-serif;
		font-size: 13px;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--brand-red);
		margin-bottom: 12px;
	}

	.section-title {
		font-family: "Switzer", sans-serif;
		font-size: clamp(1.75rem, 4vw, 2.25rem);
		font-weight: 700;
		color: #0a0a0a;
		margin: 0 0 20px;
		letter-spacing: -0.02em;
	}

	.about-text {
		font-family: "Switzer", sans-serif;
		font-size: 15px;
		color: #525252;
		line-height: 1.7;
		margin: 0 0 16px;
	}

	.about-cta {
		display: flex;
		gap: 12px;
		margin-top: 24px;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		padding: 12px 20px;
		font-family: "Switzer", sans-serif;
		font-size: 14px;
		font-weight: 600;
		border-radius: 10px;
		text-decoration: none;
		transition: all 0.2s ease;
		cursor: pointer;
		border: none;
	}

	.btn-primary {
		background: var(--brand-red);
		color: white;
		box-shadow: 0 2px 8px rgba(210, 31, 31, 0.25);
	}

	.btn-primary:hover {
		background: var(--brand-red-hover);
		box-shadow: 0 4px 12px rgba(210, 31, 31, 0.35);
		transform: translateY(-1px);
	}

	.btn-secondary {
		background: #f5f5f5;
		color: #171717;
		border: 1px solid #e5e5e5;
	}

	.btn-secondary:hover {
		background: #e5e5e5;
		border-color: #d4d4d4;
	}

	.about-visual {
		display: flex;
		flex-direction: column;
		gap: 16px;
	}

	.about-image {
		position: relative;
		border-radius: 16px;
		overflow: hidden;
		height: 280px;
	}

	.about-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s;
	}

	.about-image:hover img {
		transform: scale(1.03);
	}

	.about-values {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 12px;
	}

	.value-item {
		display: flex;
		align-items: center;
		gap: 10px;
		padding: 12px 14px;
		background: #fafafa;
		border-radius: 10px;
	}

	.value-icon {
		width: 36px;
		height: 36px;
		background: white;
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--brand-red);
		flex-shrink: 0;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
	}

	.value-title {
		font-family: "Switzer", sans-serif;
		font-size: 13px;
		font-weight: 600;
		color: #0a0a0a;
		line-height: 1.3;
	}

	@media (max-width: 900px) {
		.about {
			padding: 32px 24px;
		}

		.about-inner {
			grid-template-columns: 1fr;
			gap: 32px;
		}

		.about-visual {
			order: -1;
		}

		.about-image {
			height: 220px;
		}

		.about-cta {
			flex-wrap: wrap;
		}

		.btn {
			flex: 1;
			min-width: 160px;
		}
	}

	@media (max-width: 600px) {
		.about {
			padding: 24px 16px;
		}

		.about-inner {
			gap: 24px;
		}

		.section-title {
			font-size: 1.5rem;
		}

		.about-text {
			font-size: 14px;
		}

		.about-image {
			height: 180px;
		}

		.about-values {
			grid-template-columns: 1fr;
			gap: 10px;
		}

		.value-item {
			padding: 10px 12px;
		}

		.btn {
			padding: 10px 16px;
			font-size: 13px;
			min-width: 130px;
		}
	}
</style>
